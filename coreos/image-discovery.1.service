[Unit]
Description=Announce image_1
BindsTo=image.1.service

[Service]
ExecStart=/bin/sh -c "while true; do etcdctl set /services/image/image_1 '{ \"host\": \"%H\", \"version\": \"52c7248a14\" }' --ttl 60;sleep 45;done"
ExecStop=/usr/bin/etcdctl rm /services/image/image_1

[X-Fleet]
X-ConditionMachineOf=image.1.service
